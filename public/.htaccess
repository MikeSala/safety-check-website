# === Force www ===
RewriteEngine On
RewriteCond %{HTTP_HOST} ^przegladinstalacji\.com$ [NC]
RewriteRule ^(.*)$ https://www.przegladinstalacji.com/$1 [R=301,L]

# === Force HTTPS ===
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

# === Gzip Compression ===
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript application/json image/svg+xml application/xml text/xml
</IfModule>

# === Browser Caching ===
<IfModule mod_expires.c>
  ExpiresActive On

  # HTML - short cache (content changes)
  ExpiresByType text/html "access plus 1 hour"

  # CSS & JS - long cache (hashed filenames from Next.js)
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"

  # Images
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"

  # Fonts
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"

  # XML / Sitemap
  ExpiresByType application/xml "access plus 1 hour"
  ExpiresByType text/xml "access plus 1 hour"
</IfModule>

# === Security Headers ===
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# === Disable directory listing ===
Options -Indexes
